

<div class="article article_new">

  <div class="container">
    
    <h2>投稿ページ</h2>

    <%= form_for @article, url: article_path do |f| %>

      <div class="form-row">

        <div class="form-group col-md-6">
          <%= f.label :title, "タイトル" %>
          <%= f.text_field :title, required: true, :class => 'form-control' %>
        </div>

      </div>

      <div class="form-row">

        <div class="form-group col-md-3">
          <%= f.label :category, "カテゴリー" %>
          <%= f.text_field :category, required: true, :class => 'form-control' %>
        </div>

      </div>

      <div class="form-row">

        <div class="form-group col-md-12">
          <%= f.label :content, "内容" %>
          <%= f.text_area :content, required: true ,:class => 'form-control' %>
        </div>

      </div>

      <%= f.submit "保存" %>

    <% end %>

  </div>

</div>