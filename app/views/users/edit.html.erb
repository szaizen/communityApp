
<div class="container">
<h2>プロフィール編集</h1>


<%= form_for @profile, url: profile_path do |f| %>
	
	<div>
	  <%= f.label :name %>
	  <%= f.text_field :name %>
  </div>
  <div>
	  <%= f.label :age %>
	  <%= f.text_field :age %>
	</div>
	<div>
	  <%= f.label :country %>
	  <%= f.text_field :country %>
	</div>
	 <div>
     <%= f.label :prof_image %>
    <%= f.file_field :prof_image, id: :book_picture %>
    </div>
	<div>
  	<%= f.submit "編集" %>
  </div>
<% end %>

</div>


<p>
  <strong>Picture:</strong>
  <%= image_tag(@profile.prof_image_url) if @profile.prof_image.present? %>
</p>